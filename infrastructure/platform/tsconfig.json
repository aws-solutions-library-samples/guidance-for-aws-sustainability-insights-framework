{
	"extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"types": [
			"node"
		],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"ignoreDeprecations": "5.0",
		// overrides of extends
		"strict": false,
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": false
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"./**/__mocks__/*.ts",
		".git",
		".history",
		".vscode",
		"cdk.out",
		"dist",
		"lib",
		"node_modules"
	]
}
