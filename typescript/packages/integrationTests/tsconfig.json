{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"],

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["./**/__mocks__/*.ts", ".git", ".history", ".vscode", "cdk.out", "dist", "lib", "node_modules"]
}
